<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
            <Button
                android:id="@+id/btnPermisosBasicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Permisos Basicos"
                />
            <Button
               android:id="@+id/btnPermisosUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Permisos definidos por el usuario"
                />
            <Button
                android:id="@+id/btnLocalizacionBasica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Localizacion simple"
                />
        <Button
            android:id="@+id/btnLocalizacionGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Localizacion Google"
            />
        <Button
            android:id="@+id/btnLocalizacionGoogle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Localizacion Google 2"
            />

        <Button
            android:id="@+id/btnExamenRepaso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="examenRepaso"
            />
        <Button
            android:id="@+id/btnServicioBloqueante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Servicio bloqueante"
            />

        <Button
            android:id="@+id/btnServicioNoBloqueante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Servicio No bloqueante"
            />

        <Button
            android:id="@+id/btnNotificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificacion"
            />

        <Button
            android:id="@+id/btnBroadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Broadcast 1"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>