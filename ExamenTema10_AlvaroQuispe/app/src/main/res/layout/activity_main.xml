<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXAMEN 10"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".2">

        <Button
            android:id="@+id/btnMostrarAddPlayerActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AÃ±adir Jugador"/>

        <Button
            android:id="@+id/btnMostrarListPlayersActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listar Jugadores"/>

        <Button
            android:id="@+id/btnMostrarFilterGameActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtrar jugadores por juego favorito"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>