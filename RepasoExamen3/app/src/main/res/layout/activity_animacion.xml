<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimacionActivity">


    <ImageView
        android:id="@+id/ivAnimacion"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".2"
        />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/ivAnimacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnIniciarAnimacion"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Comenzar Animacion"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/btnDetenerAnimacion"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Detener Animacion"
            android:layout_marginBottom="20dp"
          />

        <Button
            android:id="@+id/btnVolverMainAnimacion"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:layout_marginBottom="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo de animacion"
                android:textSize="20sp"
                android:layout_marginEnd="40dp"/>
            <TextView
                android:id="@+id/tvTiempoAnimacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="0"
                />
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>