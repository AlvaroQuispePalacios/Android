<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Examen unidad 4 y 5"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <!--    Animacion    -->
        <Button
            android:id="@+id/btnMostrarAnimacionActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Animacion"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timepo de animacion"
                android:layout_marginEnd="50dp"/>

            <TextView
                android:id="@+id/tvContadorAnimacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>

        </LinearLayout>

        <!--        -->
        <Button
            android:id="@+id/btnMostrarVectorActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vector"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero de ejecuciones"
                android:layout_marginEnd="50dp"/>

            <TextView
                android:id="@+id/tvContadorVector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>

        </LinearLayout>

        <!--        -->
        <Button
            android:id="@+id/btnMostrarMapaActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mapa"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero de ejecuciones"
                android:layout_marginEnd="50dp"/>

            <TextView
                android:id="@+id/tvContadorMapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>