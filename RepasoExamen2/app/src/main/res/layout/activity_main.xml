<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Examen Unidad 4 y 5"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <!-- Animacion-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/btnMostrarActivityAnimacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animación"
                app:cornerRadius="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiempo de animación"
                    android:layout_marginEnd="30dp"/>
                <TextView
                    android:id="@+id/tvTiempoAnimacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Vector-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/btnMostrarActivityVector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vector"
                app:cornerRadius="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número de ejecuciones"
                    android:layout_marginEnd="30dp"/>
                <TextView
                    android:id="@+id/tvContadorVector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Mapa-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/btnMostrarMapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mapa"
                app:cornerRadius="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número de ejecuciones"
                    android:layout_marginEnd="30dp"/>
                <TextView
                    android:id="@+id/tvContadorMapa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>